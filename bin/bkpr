#!/usr/bin/perl -wT

use strict;
use warnings;

$ENV{PATH} = '/bin'; # untaint

BEGIN {

    unless (eval { require Beekeeper }) {
        # Modules not installed yet
        my $script_dir = (__FILE__ =~ m|^(.*)/|) ? $1 : ".";
        unshift @INC, "$script_dir/../lib";
        unshift @INC, "$script_dir/../ex/lib";
    }
}

our $VERSION = '0.01';

use Beekeeper::WorkerPool;

Beekeeper::WorkerPool->new->run;


__END__

=head1 NAME

bkpr - ...

=head1 VERSION

Version 0.01

